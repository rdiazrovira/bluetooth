<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bluetoothapp.DeviceActivity">

    <TextView
        android:id="@+id/DevNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text=" -- "
        android:textAlignment="center"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/UnpairButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/DevNameTextView"
        android:layout_margin="10dp"
        android:background="#FF3F51B5"
        android:text="Unpair"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/FollowButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UnpairButton"
        android:layout_margin="10dp"
        android:background="#FF3F51B5"
        android:text="Follow"
        android:textColor="#ffffff"/>

</RelativeLayout>
