<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

    <TextView
        android:id="@+id/SectionNameTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=" - "
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ScanningProgressBar"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="12dp"/>

    <ProgressBar
        android:id="@+id/ScanningProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/ScanningTextView"
        android:progressDrawable="@drawable/discovery_progress_color"
        android:layout_alignBottom="@+id/ScanningTextView"/>

    <TextView
        android:id="@+id/ScanningTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scanning..."
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12dp"/>


</RelativeLayout>